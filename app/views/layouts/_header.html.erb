<div class="pt-20">
  <header>
    <nav class="fixed top-0 flex w-full bg-white p-6">
      <div class="flex-1 text-gray-700">
        <%= link_to root_path do %>
          CRM
        <% end %>
      </div>

      <div class="flex-1 text-right">
        <%= link_to "Add Thing", root_path, class: "menu-item" %>

        <% if user_signed_in? %>
          <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "menu-item" %>
        <% else %>
          <%= link_to "Login", new_user_session_path, class: "menu-item" %>
          <%= link_to "Sign up", new_user_registration_path, class: "menu-item" %>
        <% end %>

      </div>
    </nav>
  </header>
</div>
