<%= render "layouts/error_explanation", object: event %>

<%= form_with(model: [@contact, event], local: true) do |form| %>
  <div class="flex flex-wrap -mx-3 mb-6 max-w-2xl">
    <div class="w-full sm:w-1/2 px-3">
      <%= form.label :title, class: "form-label" %>
      <%= form.text_field :title, class: "form-field" %>
    </div>
    <div class="w-full sm:w-1/2 px-3">
      <%= form.label :date, class: "form-label" %>
      <%= form.date_field :date, class: "form-field" %>
    </div>
    <div class="w-full px-3">
      <%= form.label :notes, class: "form-label" %>
      <%= form.text_area :notes, class: "form-field" %>
    </div>
  </div>
  <%= form.submit "Submit", class: "btn" %>
<% end %>
