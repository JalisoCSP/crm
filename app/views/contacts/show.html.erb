<div class="w-full pb-4">
  <h1 class="inline align-middle">
    <%= @contact.name %>
  </h1>
  <%= link_to "Edit", [:edit, @contact], class: "btn bg-blue-200 align-middle ml-4" %>
</div>

<%= image_tag @contact.displayed_image, loading: "lazy", alt: @contact.name, class: "rounded-full" %>
<%= @contact.company %>
<%= @contact.location %>
<%= @contact.email %>
<%= @contact.phone %>
<%= @contact.twitter %>
<%= @contact.notes %>

<div class="w-full pb-4 pt-8">
  <h2 class="inline align-middle">
    Events
  </h2>
  <%= link_to "Add New", [:new, @contact, :event], class: "btn bg-blue-200 align-middle ml-4" %>
</div>

<div class="-my-2 py-2 overflow-x-auto">
  <div class="align-middle inline-block min-w-full shadow overflow-hidden sm:rounded-lg border-b border-gray-200">
    <table class="min-w-full">
      <thead>
        <tr>
          <th>
            Title
          </th>
          <th>
            Date
          </th>
          <th>
            Actions
          </th>
        </tr>
      </thead>
      <tbody class="bg-white">
        <%= render partial: "events/table_row", collection: @contact.events %>
      </tbody>
    </table>
  </div>
</div>
