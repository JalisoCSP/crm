<%= render "layouts/error_explanation", object: contact %>

<%= form_with(model: contact, local: true) do |form| %>
  <div class="flex flex-wrap -mx-3 mb-6 max-w-xl">
    <div class="w-full px-3">
      <%= form.label :name, class: "form-label" %>
      <%= form.text_field :name, class: "form-field" %>
    </div>
    <div class="w-full px-3">
      <%= form.label :company, class: "form-label" %>
      <%= form.text_field :company, class: "form-field" %>
    </div>
    <div class="w-full px-3">
      <%= form.label :location, class: "form-label" %>
      <%= form.text_field :location, class: "form-field" %>
    </div>
    <div class="w-full px-3">
      <%= form.label :email, class: "form-label" %>
      <%= form.email_field :email, class: "form-field" %>
    </div>
    <div class="w-full px-3">
      <%= form.label :phone, class: "form-label" %>
      <%= form.text_field :phone, class: "form-field" %>
    </div>
    <div class="w-full px-3">
      <%= form.label :website, class: "form-label" %>
      <%= form.text_field :website, class: "form-field" %>
    </div>
    <div class="w-full px-3">
      <%= form.label :twitter, class: "form-label" %>
      <%= form.text_field :twitter, class: "form-field" %>
    </div>
    <div class="w-full px-3">
      <%= form.label :notes, class: "form-label" %>
      <%= form.text_area :notes, class: "form-field" %>
    </div>
  </div>
  <%= form.submit "Submit", class: "btn" %>
<% end %>
